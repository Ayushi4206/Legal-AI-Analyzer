# =================================================================
# LEGAL DOCUMENT ANALYZER - ENVIRONMENT CONFIGURATION
# =================================================================

# Application Settings
APP_NAME="Legal Document Analyzer"
APP_VERSION="1.0.0"
ENVIRONMENT=development
DEBUG=true

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=true

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production-please
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =================================================================
# AI API KEYS (Choose one or more providers)
# =================================================================

# OpenAI API Key (recommended)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo

# Google Gemini API Key
# Get from: https://makersuite.google.com/app/apikey  
GOOGLE_API_KEY=AIza-AIzaSyDFwY0xvhCy-zyaXhSZrFXf6m5k6yYmlpE
GEMINI_MODEL=gemini-pro

# Anthropic Claude API Key
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# =================================================================
# GOOGLE CLOUD SETTINGS (Optional - for Document AI)
# =================================================================

# Google Cloud Project ID
GOOGLE_CLOUD_PROJECT=your-gcp-project-id

# Path to service account JSON file
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/service-account-key.json

# Google Cloud Document AI settings
GOOGLE_CLOUD_LOCATION=us
DOCUMENTAI_PROCESSOR_ID=your-processor-id

# =================================================================
# DATABASE CONFIGURATION
# =================================================================

# SQLite (for development)
DATABASE_URL=sqlite:///./legal_analyzer.db

# PostgreSQL (for production)
# DATABASE_URL=postgresql://username:password@localhost/legal_db

# Database settings
DATABASE_ECHO=false

# =================================================================
# REDIS CONFIGURATION (Optional - for caching)
# =================================================================

# Redis URL for caching
REDIS_URL=redis://localhost:6379

# =================================================================
# FILE UPLOAD SETTINGS
# =================================================================

# Maximum file size in MB
MAX_FILE_SIZE_MB=50

# Allowed file extensions
ALLOWED_FILE_EXTENSIONS=.pdf,.docx,.doc

# Upload directories
UPLOAD_DIRECTORY=uploads
TEMP_DIRECTORY=temp

# =================================================================
# LOGGING CONFIGURATION
# =================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log format
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# =================================================================
# CORS SETTINGS
# =================================================================

# Allowed origins (use * for development, specific domains for production)
CORS_ORIGINS=*

# For production, use specific domains:
# CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=*

# =================================================================
# RATE LIMITING
# =================================================================

# Requests per hour
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# =================================================================
# DOCUMENT PROCESSING SETTINGS
# =================================================================

# Maximum number of clauses to analyze per document
MAX_CLAUSES_PER_DOCUMENT=50

# Maximum text length to process
MAX_TEXT_LENGTH=1000000

# Text chunking for AI processing
TEXT_CHUNK_SIZE=4000
TEXT_OVERLAP=200

# =================================================================
# RISK ANALYSIS SETTINGS
# =================================================================

# Default risk threshold (1-10 scale)
DEFAULT_RISK_THRESHOLD=7.0

# Risk categories to analyze
RISK_CATEGORIES=liability,termination,payment,confidentiality,intellectual_property,dispute_resolution

# =================================================================
# FEATURE FLAGS
# =================================================================

# Enable/disable advanced features
FEATURE_MULTILINGUAL_SUPPORT=false
FEATURE_DOCUMENT_COMPARISON=true
FEATURE_JURISDICTION_COMPLIANCE=true
FEATURE_AI_QA_SYSTEM=true
FEATURE_RISK_TIMELINE=false
FEATURE_SMART_BOOKMARKING=false
FEATURE_OBLIGATION_TRACKING=false
FEATURE_NOTIFICATION_SYSTEM=false

# =================================================================
# MONITORING AND ANALYTICS
# =================================================================

# Enable monitoring
MONITORING_ENABLED=false

# Prometheus settings
PROMETHEUS_PORT=9090

# Grafana settings
GRAFANA_ADMIN_PASSWORD=admin

# =================================================================
# EMAIL NOTIFICATIONS (Optional)
# =================================================================

# Enable email notifications
EMAIL_ENABLED=false

# SMTP Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Notification settings
NOTIFY_ON_HIGH_RISK=true
NOTIFY_ON_ANALYSIS_COMPLETE=false

# =================================================================
# THIRD-PARTY INTEGRATIONS
# =================================================================

# Slack webhook for notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Microsoft Teams webhook
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/YOUR-WEBHOOK

# =================================================================
# BACKUP AND STORAGE
# =================================================================

# AWS S3 settings (for file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_BUCKET_NAME=legal-analyzer-files
AWS_REGION=us-west-2

# Azure Blob Storage
AZURE_STORAGE_CONNECTION_STRING=your-azure-connection-string
AZURE_CONTAINER_NAME=legal-documents

# =================================================================
# DEVELOPMENT SETTINGS
# =================================================================

# Development database
DEV_DATABASE_URL=sqlite:///./dev_legal_analyzer.db

# Test database
TEST_DATABASE_URL=sqlite:///./test_legal_analyzer.db

# Enable debug toolbar
DEBUG_TOOLBAR=true

# =================================================================
# PRODUCTION OVERRIDES
# =================================================================

# Set these for production deployment
# ENVIRONMENT=production
# DEBUG=false
# RELOAD=false
# LOG_LEVEL=WARNING
# CORS_ORIGINS=https://yourdomain.com
# SECRET_KEY=generate-a-strong-secret-key-for-production

# =================================================================
# NOTES
# =================================================================

# 1. Copy this file to .env and fill in your actual values
# 2. Never commit .env file to version control
# 3. Use strong passwords and API keys
# 4. For production, use a proper secret management service
# 5. Set up proper SSL certificates for HTTPS
# 6. Configure firewall rules for security
# 7. Set up automated backups
# 8. Monitor API usage and costs
# 9. Implement proper logging and monitoring
# 10. Test all integrations before production deployment